{% extends '::layout.html.twig' %}

{% block content -%}
    <h1>Incidencia</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Cedula</th>
                <td>{{ entity.cedula }}</td>
            </tr>
            <tr>
                <th>Nombres</th>
                <td>{{ entity.nombres }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ entity.apellidos }}</td>
            </tr>
            <tr>
                <th>Incidencia</th>
                <td>{{ entity.incidencia }}</td>
            </tr>
            <tr>
                <th>Motivo</th>
                <td>{{ entity.motivo }}</td>
            </tr>
            <tr>
                <th>Solucion</th>
                <td>{{ entity.solucion }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('incidencia') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('incidencia_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('incidencia_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
